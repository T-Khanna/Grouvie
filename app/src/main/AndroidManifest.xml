<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jett_apps.grouvie">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="jett_apps.grouvie.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jett_apps.grouvie.SelectFilm"
            android:label="@string/title_activity_select_film"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="jett_apps.grouvie.SelectShowtime" />
        <activity android:name="jett_apps.grouvie.LeaderInitialPlan" />

        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />

        <activity android:name="jett_apps.grouvie.SelectCinema" />
        <activity
            android:name="jett_apps.grouvie.SelectGroup"
            android:label="@string/title_activity_group_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="jett_apps.grouvie.LandingPage" />
        <activity android:name="jett_apps.grouvie.CurrentPlanView"></activity>
    </application>

</manifest>