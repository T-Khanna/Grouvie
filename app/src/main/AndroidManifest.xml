<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jett_apps.grouvie">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/popcorn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Views.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PlanningActivities.SelectFilm"
            android:label="@string/title_activity_select_film"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".PlanningActivities.SelectShowtime"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Views.LeaderInitialPlan"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".PlanningActivities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Views.LandingPage"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />

        <activity android:name=".PlanningActivities.SelectCinema"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlanningActivities.SelectGroup"
            android:label="@string/title_activity_group_selection"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Views.CurrentPlanView"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Views.ProfilePage"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Views.GroupView"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- <activity android:name=".SuggestChange" /> -->
        <activity android:name=".PlanningActivities.SuggestChangeInPlan"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".Notifications.IIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Notifications.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Views.ConfirmPlanView"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>