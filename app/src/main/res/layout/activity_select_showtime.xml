<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="jett_apps.grouvie.PlanningActivities.SelectShowtime">

    <ListView
        android:id="@+id/timeList"
        style="@style/Widget.AppCompat.Light.ListView.DropDown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="false"
        android:layout_below="@+id/chosenCinema"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<include
    android:id="@+id/showingShowtimes"
    layout="@layout/content_select_film"
    android:layout_width="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_height="500dp" />

<TextView
    android:id="@+id/textView3"
    android:textSize="30sp"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:text="@string/select_a_showtime"
    app:layout_anchorGravity="top|center_horizontal"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/chosenFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/chosenfilm"
        android:textSize="20sp"
        app:layout_anchorGravity="top|center_horizontal"
        android:textAlignment="center"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/chosenCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosenFilm"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/chosencinema"
        android:textSize="20sp"
        app:layout_anchorGravity="top|center_horizontal" />

    <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:id="@+id/appBarLayout">


</android.support.design.widget.AppBarLayout>

</RelativeLayout>
